<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:background="#f5f5f5"
    android:orientation="vertical"
    android:padding="@dimen/Spacing">

    <TextView
        android:id="@+id/resetpsd_t001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_style"
        android:gravity="center"
        android:text="@string/a08_dlg_t000"
        android:textColor="#232424"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/signin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resetpsd_t001"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="80dp"
        android:text="帳號:"
        android:textColor="#232424"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/reset_e001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resetpsd_t001"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/signin_name"
        android:layout_toRightOf="@+id/signin_name"
        android:inputType="text"
        android:labelFor="@+id/RelativeLayout1"
        android:text=""
        android:textColor="@color/Black"
        android:textColorHint="@color/Black"
        android:textColorLink="@color/Black"
        android:textCursorDrawable="@color/Black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/signin_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reset_e001"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp"
        android:text="密碼:"
        android:textColor="#232424"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/resetpsd_e003"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reset_e001"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/signin_password"
        android:layout_toRightOf="@+id/signin_password"
        android:inputType="textPassword"
        android:text=""
        android:textColor="@color/Black"
        android:textColorHint="@color/Black"
        android:textColorLink="@color/Black"
        android:textCursorDrawable="@color/Black"
        android:textSize="24sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/m0905_btnOK"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resetpsd_e003"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_style"
        android:text="@string/a08_dlg_b001"
        android:textColor="#e6fcfb"
        android:textColorLink="@color/Black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/m0905_btnCancel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resetpsd_e003"
        android:layout_alignBaseline="@+id/m0905_btnOK"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_style_white"
        android:text="@string/a08_dlg_b002"
        android:textColor="#54bfb8"
        android:textColorLink="@color/Black"
        android:textSize="18sp"
        android:textStyle="bold" />


    <!--  ==================================================  -->


</RelativeLayout>
