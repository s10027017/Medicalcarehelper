<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0">

    <TextView
        android:id="@+id/tvidTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Teal"
        android:text="@string/m_content"
        android:textColor="@color/Navy"
        android:textSize="18sp" />

    <Button
        android:id="@+id/c_lsb001"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nav_view1"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_style"
        android:fontFamily="@font/openhuninn"
        android:gravity="center"
        android:text="@string/btnadd"
        android:textColor="#e6fcfb"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/android:list"
        android:layout_width="match_parent"
        android:layout_height="371dp"
        android:layout_above="@+id/c_lsb001"
        android:layout_below="@+id/nav_view3"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:background="#f0f0f0">

    </ListView>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/nav_view2"></FrameLayout>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fragment_container"
        android:layout_marginBottom="0dp"
        android:background="#f5f5f5"
        app:menu="@menu/bottom_navigation1" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#f5f5f5"
        app:menu="@menu/bottom_navigation2" />
</RelativeLayout>