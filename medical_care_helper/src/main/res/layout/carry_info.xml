<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Lime"
    android:orientation="vertical"
    tools:context=".Carry_info">

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/nav_view1"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        android:visibility="invisible">

        <Button
            android:id="@+id/h01_b008"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="25dp"
            android:background="@android:drawable/btn_default_small"
            android:text="@string/h01_b008" />

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true">

        </WebView>

        <Spinner
            android:id="@+id/spnLocation"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:alpha="0.5"
            android:background="@color/White" />

        <TextView
            android:id="@+id/txtOutput"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="10dp"
            android:alpha="125"
            android:background="#66cccccc"
            android:hint="@string/toutput"
            android:padding="3dp"
            android:text="@string/showlocid"
            android:textColor="@color/Teal"
            android:textColorLink="@color/Teal"
            android:visibility="invisible" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollview1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/nav_view1"
        android:layout_marginBottom="0dp"
        android:background="@color/Silver">

        <LinearLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Silver"
            android:orientation="vertical"
            android:padding="@dimen/Spacing"
            android:visibility="visible">

            <Button
                android:id="@+id/h01_b001"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:drawable/btn_default"
                android:text="@string/h01_b001"
                android:textColor="@color/Teal"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/h01_b002"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:drawable/btn_default"
                android:text="@string/h01_b002"
                android:textColor="@color/Teal"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/h01_b007"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:drawable/btn_default"
                android:text="@string/h01_b007"
                android:textColor="@color/Teal"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/h01_b003"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:drawable/btn_default"
                android:text="@string/h01_b003"
                android:textColor="@color/Teal"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/h01_b004"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:drawable/btn_default"
                android:text="@string/h01_b004"
                android:textColor="@color/Teal"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/h01_b005"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:drawable/btn_default"
                android:text="@string/h01_b005"
                android:textColor="@color/Teal"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/h01_b006"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:drawable/btn_default"
                android:text="@string/h01_b006"
                android:textColor="@color/Teal"
                android:textSize="24sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/nav_view2"></FrameLayout>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fragment_container"
        android:layout_marginBottom="0dp"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_navigation1" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation2"
        android:background="?android:attr/windowBackground"/>


</RelativeLayout>