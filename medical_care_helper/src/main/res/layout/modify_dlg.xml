<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:background="@color/Silver"
    android:orientation="vertical"
    android:padding="@dimen/Spacing">

    <TextView
        android:id="@+id/resetpsd_t001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_lime"
        android:gravity="center"
        android:text="@string/a04_t003"
        android:textColor="@color/Black"
        android:textSize="30sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/signup_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resetpsd_t001"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:text="姓名:"
        android:textColor="@color/Black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/modify_e001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resetpsd_t001"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/signup_name"
        android:layout_toRightOf="@+id/signup_name"
        android:inputType="text"
        android:labelFor="@+id/RelativeLayout1"
        android:text=""
        android:textColor="@color/Black"
        android:textColorHint="@color/Black"
        android:textColorLink="@color/Black"
        android:textCursorDrawable="@color/Black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/signup_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modify_e001"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="25dp"
        android:text="電子信箱:"
        android:textColor="@color/Black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/modify_e002"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modify_e001"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/signup_email"
        android:layout_toRightOf="@+id/signup_email"
        android:inputType="text"
        android:labelFor="@+id/RelativeLayout1"
        android:text=""
        android:textColor="@color/Black"
        android:textColorHint="@color/Black"
        android:textColorLink="@color/Black"
        android:textCursorDrawable="@color/Black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/signup_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modify_e002"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:text="手機:"
        android:textColor="@color/Black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/modify_e003"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modify_e002"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/signup_password"
        android:layout_toRightOf="@+id/signup_password"
        android:inputType="text"
        android:labelFor="@+id/RelativeLayout1"
        android:text=""
        android:textColor="@color/Black"
        android:textColorHint="@color/Black"
        android:textColorLink="@color/Black"
        android:textCursorDrawable="@color/Black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/b02_t006"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_password"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:text="地址:"
        android:textColor="@color/Black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/modify_e004"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modify_e003"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/signup_password"
        android:layout_toRightOf="@+id/signup_password"
        android:inputType="text"
        android:labelFor="@+id/RelativeLayout1"
        android:text=""
        android:textColor="@color/Black"
        android:textColorHint="@color/Black"
        android:textColorLink="@color/Black"
        android:textCursorDrawable="@color/Black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/m0905_btnOK"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_button_white"
        android:text="@string/a08_dlg_b001"
        android:textColor="@color/Black"
        android:textColorLink="@color/Black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/m0905_btnCancel"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resetpsd_e003"
        android:layout_alignBaseline="@+id/m0905_btnOK"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_button_white"
        android:text="@string/a08_dlg_b002"
        android:textColor="@color/Black"
        android:textColorLink="@color/Black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!--  ==================================================  -->


</RelativeLayout>
