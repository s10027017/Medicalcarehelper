<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:orientation="vertical"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/g01_t000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/g01_t001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Red"
        android:text="工作排程小幫手"
        android:textColor="@color/White"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        >
        <TextView
            android:id="@+id/g01_t002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="案件姓名:"
            android:textColor="@color/Navy"
            android:textSize="16sp" />
        <Spinner
            android:id="@+id/s001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textSize="16sp"
            android:background="@drawable/spinner"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/g01_t003"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合約種類:"
            android:textColor="@color/Navy"
            android:textSize="16sp" />
        <Spinner
            android:id="@+id/s002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textSize="16sp"
            android:background="@drawable/spinner"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/g01_t004"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="排程日期區間:"
            android:textColor="@color/Navy"
            android:textSize="16sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/g01_t005"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020/08/08"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/g01_t006"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/g01_t007"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner"
            android:text="2020/08/08"
            android:onClick="show_calender"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/g01_t008"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服務時間:"
            android:textColor="@color/Navy"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/g01_t009"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7點"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/g01_t010"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~"
            android:textSize="16sp" />
        <Spinner
            android:id="@+id/s003"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textSize="16sp"
            android:background="@drawable/spinner"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/c001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星期一" />

        <CheckBox
            android:id="@+id/c002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星期二" />

        <CheckBox
            android:id="@+id/c003"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星期三" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/c004"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星期四" />

        <CheckBox
            android:id="@+id/c005"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星期五" />

        <CheckBox
            android:id="@+id/c006"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星期六" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/c000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星期日" />

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/g01_b002"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="設定排程" />

        <Button
            android:id="@+id/g01_b003"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="關閉視窗" />

    </LinearLayout>

</LinearLayout>
